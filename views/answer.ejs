<!DOCTYPE html>
<html lang="en">
  <%- include('head.ejs') %>
  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="center brand-logo">PetGPT</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li>For first-time pet owners.</li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <!-- welcome message and topic selection row -->
      <div class="row">
        <div class="col s12">
          <div class="card" id="topics">
            <!-- inner welcome message row -->
            <div class="row">
              <div class="col s12">
                <h4>Get ready to welcome your <%= breed %> puppy home</h4>
              </div>
            </div>
            <!-- close inner welcome message row -->

            <!-- welcome image row -->
            <div class="row">
              <div class="col s12">
                <div>
                  <img
                    src="<%= breed %>.png"
                    alt="Breed Image"
                    class="left-image"
                    style="display: inline-block"
                  />
                </div>
              </div>
            </div>
            <!-- close welcome image row -->

            <!-- buttons for topics row -->
            <div class="row">
              <div class="col s12 center-align">
                <div class="card-action">
                  <!-- list all topics -->
                  <% for(var topic in topics) { %>

                  <button
                    class="btn waves-effect waves-light btn-fixed-width topic-button"
                    type="button"
                    id="<%= topic %>"
                  >
                    <%= topic %>
                  </button>

                  <% } %>
                </div>
              </div>
            </div>
            <!-- close buttons for topics row -->
          </div>
        </div>
      </div>
      <!-- close welcome message and topic selection row -->

      <!-- on page load: should be hidden supply topic description -->
      <div class="row hide" id="about-supplies">
        <div class="col s12">
          <div class="card">
            <div class="card-content">
              <span class="card-title">Supplies</span>
              <% for(var supply of topics.supplies) { %>
              <ul>
                <li><%= supply.name %>: <%= supply.purpose %></li>
              </ul>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <!-- close hidden supplies topic description -->

      <!-- on page load: should be hidden medical topic description -->
      <div class="row hide" id="about-medical">
        <div class="col s12">
          <div class="card">
            <div class="card-content">
              <span class="card-title">Medical</span>
              <% for(var medical of topics.medical) { %>
              <ul>
                <li><%= medical.name %>: <%= medical.purpose %></li>
              </ul>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <!-- close hidden medical topic description -->

      <!-- on page load: should be hidden training topic description -->
      <div class="row hide" id="about-training">
        <div class="col s12">
          <div class="card">
            <div class="card-content">
              <span class="card-title">Training</span>
              <% for(var training of topics.training) { %>
              <ul>
                <li><%= training.name %>: <%= training.purpose %></li>
              </ul>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <!-- close hidden training topic description -->

      <!-- on page load: should be hidden community topic description -->
      <div class="row hide" id="about-community">
        <div class="col s12">
          <div class="card">
            <div class="card-content">
              <span class="card-title">Community</span>
              <% for(var training of topics.community) { %>
              <ul>
                <li><%= training.name %>: <%= training.purpose %></li>
              </ul>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <!-- close hidden community topic description -->

      <!-- on page load: should be hidden breed topic description -->
      <div class="row hide" id="about-breed">
        <div class="col s12">
          <div class="card">
            <div class="card-content">
              <span class="card-title"><%= breed %></span>
              <ul>
                <li><%= topics.breed_details.summary %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!-- close hidden community topic description -->

      <!-- ask ChatGPT a question row -->
      <div class="row">
        <div row="col s12">
          <div class="card" id="How can I help?">
            <div class="row">
              <div class="col s12">
                <span class="card-title">Questions</span>
                <form id="question-form">
                  <input
                    type="text"
                    id="question-input"
                    placeholder="Enter your question..."
                  />
                  <div class="card-action">
                    <button
                      class="btn waves-effect waves-light btn-fixed-width"
                      id="submit"
                      type="button"
                    >
                      Submit
                    </button>
                  </div>
                </form>
              </div>
            </div>
            <div class="row">
              <div class="col s12">
                <ul id="question-list">
                  <!-- Only the most recent question will be displayed here -->
                </ul>
                <div id="answer-container">
                  <!-- Only the most recent answer will be displayed here -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- close ChatGPT a question row -->
    </div>
    <!-- close 'container' div -->

    <%- include('footer.ejs') %>
  </body>
  <script src="../answer_script.js"></script>
  <script
    type="text/javascript"
    src="materialize/js/materialize.min.js"
  ></script>
</html>
